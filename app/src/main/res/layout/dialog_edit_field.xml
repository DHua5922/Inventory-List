<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="@dimen/item_padding">

    <TextView
            android:id="@+id/title" android:textStyle="bold"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="@dimen/text"
            android:layout_marginBottom="@dimen/dialog_gap"/>

    <EditText
            android:id="@+id/field" android:layout_below="@+id/title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="@string/hint_dialog_text" android:textSize="@dimen/text"/>

    <TextView
            android:id="@+id/description"  android:textSize="@dimen/text"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/field"
            android:layout_marginTop="@dimen/dialog_gap_description" android:layout_marginBottom="@dimen/dialog_gap_description"/>

    <LinearLayout
            android:id="@+id/buttons" android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/description">

        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="@dimen/text" android:text="@string/btn_dialog_cancel"
                android:layout_weight="1" android:id="@+id/btn_dialog_cancel"
                android:background="@drawable/button_manage" android:textColor="@color/white"
                android:layout_marginRight="@dimen/btn_gap" android:layout_marginEnd="@dimen/btn_gap"/>

        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="@dimen/text" android:text="@string/btn_dialog_ok"
                android:layout_weight="1" android:id="@+id/btn_dialog_ok"
                android:background="@drawable/button_manage" android:textColor="@color/white"
                android:layout_marginLeft="@dimen/btn_gap" android:layout_marginStart="@dimen/btn_gap"/>

    </LinearLayout>



</RelativeLayout>