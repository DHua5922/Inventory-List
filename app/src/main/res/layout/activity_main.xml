<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#FFFFFF" tools:context="com.devdhua512.inventorylist.MainActivity">
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/horizontal_margin" android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin" android:layout_marginRight="@dimen/horizontal_margin"
            android:contentDescription="@string/description_splash_screen" app:srcCompat="@drawable/img_splash_screen"/>
</androidx.constraintlayout.widget.ConstraintLayout>