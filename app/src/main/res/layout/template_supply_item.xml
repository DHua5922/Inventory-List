<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/layoutHolder"
                android:padding="@dimen/item_padding">

        <CheckBox
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:id="@+id/checkBox"/>


        <EditText android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:textSize="@dimen/text" android:hint="@string/hint_item_name"
                  android:layout_weight="1" android:scrollHorizontally="true"
                  android:singleLine="true" android:id="@+id/name"/>

        <EditText android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:textSize="@dimen/text" android:hint="@string/hint_item_quantity"
                  android:layout_weight="1" android:scrollHorizontally="true"
                  android:singleLine="true" android:id="@+id/quantity"/>

        <Button android:layout_width="wrap_content" android:layout_height="match_parent"
                android:text="@string/text_delete" android:textSize="@dimen/text" android:textColor="@color/white"
                android:background="@drawable/button_remove" android:id="@+id/btn_delete"/>

</LinearLayout>